@model StudentWebsite.Models.StudentViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center pb-5">
    <h1 class="display-4">Student Portal</h1>
</div>
<div class="row">
    <div class="col-md-6 px-5">
        <h4>Students</h4>
        <h6>Click to view details.</h6>
        <div class="list-group">
            @foreach (var item in Model.Students)
            {
                <a asp-controller="Students" asp-action="Details" asp-route-id="@item.ID" class="list-group-item list-group-item-action">
                    @Html.DisplayFor(modelitem => item.FirstName)
                    @Html.DisplayFor(modelitem => item.LastName)
                </a>
            }
        </div>
    </div>
    <div class="col-md-6 px-5">
        <h4>Courses</h4>
        <h6>Click to view course info.</h6>
        <div class="list-group">
            @foreach (var item in Model.Courses)
            {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.ID" class="list-group-item list-group-item-action">
                    @Html.DisplayFor(modelitem => item.CourseCode)
                    @Html.DisplayFor(modelitem => item.Name)
                    </a>
            }
        </div>
    </div>
</div>
