@model IEnumerable<StudentWebsite.Models.Registration>

@{
    ViewData["Title"] = "Registrations";
}

<h1>Registrations</h1>

<table class="table table-hover">
    <thead class="table-secondary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Section.Course.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section.Course.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.Course.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.Course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SectionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>
                <td>@*
                    <a asp-action="Edit" asp-route-id="@item.RegistrationID" class="btn btn-sm btn-success">Edit</a>*@@*
                    <a asp-action="Details" asp-route-id="@item.RegistrationID" class="btn btn-sm btn-primary">Details</a>*@
                    <a asp-action="Delete" asp-route-id="@item.RegistrationID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
