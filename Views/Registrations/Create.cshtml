@model StudentWebsite.Models.Registration

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <select asp-for="SectionID" class="form-control" asp-items="ViewBag.SectionID">
                    <option value="">--Select Section--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentsID">
                    <option value="">--Select Student--</option>
                </select>
            </div>
            <div class="form-group pt-2">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-success float-end" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
